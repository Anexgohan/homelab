{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "palette": {
        "red":   "#ff0000",
        "green": "#00ff00",
        "blue":  "#0000ff",
        "cyan": "#00ffff",
        "yellow": "#ffff00",
        "magenta": "#ff00ff",
        "black": "#000000",
        "white": "#ffffff",
        "fg_color": "#ffffff",
        "bg_color": "#242424",
        "text_color1": "#0099ff",
        "text_color2": "#ffffff",
        "orange": "#ff7b00"
    },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          // display the full path of the current directory.
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "p:text_color1",
          "background": "transparent",
          //"background": "p:bg_color",
          "template": "{{ .Path }}",
          "properties": {
            "style": "full",
            "mapped_locations": {
              "C:\\temp": ""
            }
          }
        },
        {
          // add a "❯" in between the above and below segments.
          "type": "text",
          "style": "powerline",
          "foreground": "p:orange",
          "background": "transparent",
          "template": " ❯ "
          //"template": "  "
        },
        {
          // display the hostname, OS, shell, and username.
          "type": "text",
          "style": "plain",
          "foreground": "p:text_color1",
          "background": "transparent",
          //"template": "[{{.HostName}}]-[{{.OS}}]-[{{.Shell}}]-[u:{{.UserName}}]"
          "template": "[{{.HostName}}]-[{{.OS}}]-[u:{{.UserName}}]"
        }
      ]
    },
    {
      // This block is used for user input prompt.
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{if gt .Code 0}}p:red{{end}}",
            "{{if eq .Code 0}}p:green{{end}}"
          ],
          // "foreground": "p:text_color1",
          "background": "transparent",
          "template": "❯"
        }
      ]
    }
  ],
  // transient_prompt is used to display the previous commands used.
  "transient_prompt": {
        "foreground_templates": [
            "{{if gt .Code 0}}p:red{{end}}",
            "{{if eq .Code 0}}p:green{{end}}"
          ],
        //"foreground": "p:text_color1",
        "background": "transparent",
        "template": "❯ "
    }
}
