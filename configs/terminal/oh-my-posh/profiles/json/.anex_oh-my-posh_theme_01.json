{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "palette": {
        "red":   "#ff0000",
        "green": "#00ff00",
        "blue":  "#0000ff",
        "cyan": "#00ffff",
        "yellow": "#ffff00",
        "magenta": "#ff00ff",
        "black": "#000000",
        "white": "#ffffff",
        "fg_color": "#ffffff",
        "bg_color": "#242424",
        "text_color1": "#0099ff",
        "text_color2": "#ffffff",
        "orange": "#ff7b00",
        "dark_green": "#00a000",
        "dark_red": "#a00000",
        "error_color": "#e74856"
    },
  "blocks": [
    {
      // save output of the command "echo Hello" to the variable "Hello".
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          // display the full path of the current directory.
          "type": "path",
          // "style": "powerline",
          // "powerline_symbol": "",
          "style": "plain",
          "foreground": "p:text_color1",
          "background": "transparent",
          //"background": "p:bg_color",
          "template": "{{ .Path }}",
          "properties": {
            "style": "full"
            // "mapped_locations": {
            //   "E:\\git\\repositories\\homelab": ""
            // }
          }
        },
        {
          // add a "❯" in between the above and below segments.
          "type": "text",
          "style": "powerline",
          "foreground": "p:orange",
          "background": "transparent",
          "template": " ❯ "
          //"template": "  "
        },
        {
          // display the hostname, OS, shell, and username.
          "type": "text",
          "style": "plain",
          "foreground": "p:text_color1",
          "background": "transparent",
          "template": "[{{.OS}}|{{.HostName}}]-[u:{{.UserName}}]"
        },
        {
          "type": "git",
          "style": "plain",
          "powerline_symbol": "",
          "foreground": "p:text_color1",
          // "background": "transparent",
          // "background_templates": [
          //   "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
          //   "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
          //   "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
          //   "{{ if gt .Behind 0 }}#B388FB{{ end }}"
          // ],
          "template": " | {{ .UpstreamIcon }} {{ .HEAD }}{{if or (.Working.Changed) (.Staging.Changed) }} *{{ end }}{{ if gt .Ahead 0 }} [{{ .Ahead }}↑]{{ end }}{{ if gt .Behind 0 }} [{{ .Behind }}↓]{{ end }}",
          // "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "untracked_modes": {
              "/Users/user/Projects/oh-my-posh/": "no"
            }
          }
        }
      ]
    },
    {
      // This block is used for user input prompt.
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{if gt .Code 0}}p:error_color{{end}}",
            "{{if eq .Code 0}}p:dark_green{{end}}"
          ],
          "background": "transparent",
          "template": "❯"
        }
      ]
    }
  ],
  // transient_prompt is used to display the previous commands used.
  "transient_prompt": {
        "foreground_templates": [
            "{{if gt .Code 0}}p:error_color{{end}}",
            "{{if eq .Code 0}}p:dark_green{{end}}"
          ],
        "background": "transparent",
        "template": "❯ "
    }
}
