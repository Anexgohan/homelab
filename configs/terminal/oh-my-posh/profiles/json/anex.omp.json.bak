{
  // upload this to github and use the raw link in the oh-my-posh config.
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "palette": {
        "red":   "#ff0000",
        "green": "#00ff00",
        "blue":  "#0000ff",
        "cyan": "#00ffff",
        "yellow": "#ffff00",
        "magenta": "#ff00ff",
        "black": "#000000",
        "white": "#ffffff",
        "fg_color": "#ffffff",
        "bg_color": "#242424",
        "text_color1": "#0099ff",
        "text_color2": "#ffb055",
        "text_color3": "#ffe2c1",
        "orange": "#ff7b00",
        "dark_green": "#00a000",
        "dark_red": "#a00000",
        "error_color": "#e74856",
        "git_ahead": "#999900",
        "git_behind": "#a54343",
        "frame_color1": "#2e9599",
        "frame_color2": "#0069af"
    },
  "blocks": [
    {
      "type": "rprompt",
      "overflow": "hide",
      "segments": [
        {
          // display the current shell.
          "type": "shell",
          "style": "plain",
          "foreground": "p:text_color2",
          "background": "transparent",
          "template": "<p:orange,transparent>|</><p:text_color1> </>{{ .Name }}<p:orange,transparent>|</>" //     \uf489
        },
        {
          // display the execution time of the last command.
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "", //    \ue0b0
          "foreground": "p:text_color2",
          "background": "transparent",
          "template": "<p:text_color1></> {{ .FormattedMs }}", //     \uf520
          "properties": {
            "threshold": 5000,
            "style": "austin",
            "always_enabled": true
          }
        },
        {
          // display the current time.
          "type": "time",
          "style": "diamond",
          "invert_powerline": true,
          "foreground": "p:text_color3",
          "background": "p:frame_color2",
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b4",
          "template": " {{ .CurrentDate | date .Format }} "
        }
      ]
    },
    {
      // save output of the command "echo Hello" to the variable "Hello".
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          // display the full path of the current directory.
          "type": "path",
          // "style": "powerline",
          // "powerline_symbol": "",
          "style": "plain",
          "foreground": "p:text_color1",
          "background": "transparent",
          //"background": "p:bg_color",
          // "template": "<p:text_color2> {{ .Location }}</>",
          "template": "<p:text_color2> {{ .AbsolutePWD }}</>",
          // "template": "<p:text_color2> {{ .Path }}</>",
          // "template": "<p:text_color2> {{ .Folder }}</>",
          "properties": {
            "style": "full"
            // "mapped_locations": {
            //   "E:\\git\\repositories\\homelab": ""
            // }
          }
        },
        {
          // add a "❯" in between the above and below segments.
          "type": "text",
          "style": "powerline",
          "foreground": "p:orange",
          "background": "transparent",
          "template": " ❯ "
          //"template": "  "
        },
        {
          // display the hostname, OS, shell, and username.
          "type": "text",
          "style": "plain",
          "foreground": "p:text_color1",
          "background": "transparent",
          "template": "{{.OS}}<p:orange,transparent>|</>{{.HostName}}<p:orange,transparent>|</>u:{{.UserName}}"
        },
        {
          // add a "❯" in between the above and below segments.
          "type": "text",
          "style": "powerline",
          "foreground": "p:orange",
          "background": "transparent",
          "template": " ❯"
          // "template": "  "
        },
        {
          // display the git branch and status.
          "type": "git",
          "style": "plain",
          "powerline_symbol": "",
          "foreground": "p:text_color1",
          // "background": "transparent",
          // "background_templates": [
          //   "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
          //   "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
          //   "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
          //   "{{ if gt .Behind 0 }}#B388FB{{ end }}"
          // ],
          "template": " {{ .UpstreamIcon }} {{ .HEAD }}{{if or (.Working.Changed) (.Staging.Changed) }}*{{ end }}{{ if gt .Ahead 0 }} [{{ .Ahead }}<p:git_ahead>↑</>]{{ end }}{{ if gt .Behind 0 }} [{{ .Behind }}<p:git_behind>↓</>]{{ end }}",
          // "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}",
          "properties": {
            "cache_duration": "none",
            "commit_icon": "@",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "untracked_modes": {
              "/Users/user/Projects/oh-my-posh/": "no"
            }
          }
        }
      ]
    },
    {
      // This block is used for user input prompt.
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{if gt .Code 0}}p:error_color{{end}}",
            "{{if eq .Code 0}}p:dark_green{{end}}"
          ],
          "background": "transparent",
          "template": "❯"
        }
      ]
    }
  ],
  // transient_prompt is used to display the previous commands used.
  "transient_prompt": {
        "foreground_templates": [
            "{{if gt .Code 0}}p:error_color{{end}}",
            "{{if eq .Code 0}}p:dark_green{{end}}"
          ],
        "background": "transparent",
        "template": "❯ "
    },
  // The secondary prompt is displayed when a command text spans multiple lines.
    "secondary_prompt": {
        "background": "transparent",
        "foreground": "p:orange",
        "template": "❯❯ "
    }
}
